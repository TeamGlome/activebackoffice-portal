    "next-pwa": "^5.6.0",
    "prisma": "^6.12.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.60.0",
    "react-hotkeys-hook": "^5.1.0",
    "same-runtime": "^0.0.1",
